{
  "name": "roma-mart-site",
  "private": true,
  "version": "2.6.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production && node scripts/prerender.js",
    "build:ssg": "vite-ssg build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:css": "stylelint \"src/**/*.css\"",
    "check:quality": "node scripts/check-quality.js",
    "check:integrity": "node scripts/check-checker-integrity.js",
    "check:all": "npm run lint && npm run lint:css && npm run check:quality && npm run check:integrity",
    "prepare": "husky",
    "preview": "vite preview",
    "deploy": "node scripts/ensure-main-branch.js && npm run build && gh-pages -d dist",
    "format": "prettier --write \"src/**/*.{js,jsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,json}\""
  },
  "dependencies": {
    "@hcaptcha/react-hcaptcha": "^1.17.1",
    "framer-motion": "^12.33.0",
    "lucide-react": "^0.554.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "vite-plugin-pages": "^0.33.1",
    "vite-ssg": "^28.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.0",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.5.0",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "overrides": {
    "react-helmet-async": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
    },
    "esbuild": "0.27.0"
  },
  "legacy-peer-deps": true,
  "engines": {
    "node": ">=22 <24"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.css": [
      "prettier --write",
      "stylelint"
    ],
    "*.json": "prettier --write"
  }
}
